---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import CategoryList from "./CategoryList.astro";
type Props = {
  post: CollectionEntry<"posts">;
};

const { post }: Props = Astro.props;
---

<article
  class="mb-20 grid grid-cols-2 gap-x-12 gap-y-5 max-lg:grid-cols-1 max-sm:mb-12">
  <a href={`/blog/${post.slug}`}>
    <Image
      src={post.data.image}
      alt={post.data.title}
      width={1024}
      height={1024 / 2}
      class="aspect-thumbnail rounded-2xl object-cover"
    />
  </a>
  <div>
    <div class="mb-4">
      <CategoryList categories={post.data.categories} />
    </div>
    <a
      href={`/blog/${post.slug}`}
      class="mb-4 inline-block text-5xl font-bold text-zinc-900">
      <h2>{post.data.title}</h2>
    </a>
    <p class="mb-9 line-clamp-3 text-2xl text-zinc-500 max-xl:line-clamp-2">
      {post.body}
    </p>
    <span class="text-xl text-zinc-700">{post.data.date}</span>
  </div>
</article>
